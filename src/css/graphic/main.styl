#showYear{
  position: absolute;
  top: 50%;
  left: 50%;
  font-weight: bold;
  font-family: 'BentonSans', Helvetica, Arial, sans-serif;
  font-size: 3rem;
  color: black;
  opacity: 0.4;
  z-index: 1000;
}


.info {
  padding: 6px 8px;
  font: 14px/16px Arial, Helvetica, sans-serif;
  background: white;
  background: rgba(255,255,255,0.8);
