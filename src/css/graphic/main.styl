  border-radius: 5px;
}

.info.leaflet-control{
  margin: auto;
  max-width: 350px;
  margin-top: 10px;
  margin-right: 10px;
}

.info h4 {
  margin: 0 0 5px;
  color: black;
  font-family:'BentonSans', Helvetica, Arial, sans-serif;
  font-size:1.3rem;
